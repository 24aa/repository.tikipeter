<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.tikipeter" name="Tikipeter's Repository" version="0.0.1" provider-name="Tikipeter">
	<extension point="xbmc.addon.repository" name="Tikipeter's Repository">
		<info compressed="false">https://raw.githubusercontent.com/Tikipeter/repository.tikipeter/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/Tikipeter/repository.tikipeter/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/Tikipeter/repository.tikipeter/master/zip</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary>Tikipeter's Repository</summary>
		<description>Unofficial add-ons repository</description>
	</extension>
</addon>
<addon id="plugin.video.furkit" version="1.1.60a" name="Furk It" provider-name="Furk It">
    <requires>
        <import addon="script.module.requests" version="2.3.0"/>
        <import addon="script.module.beautifulsoup4" version="0.6.0"/>
        <import addon="script.furkit.artwork" optional="true" />
        <import addon="script.module.resolveurl" optional="true"/>
        <import addon="script.module.universalscrapers" version="1.0.0" optional="true" />
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="furkit.py">
        <provides>audio video</provides>
    </extension>
    <extension point="xbmc.service"
                library="service.py" start="startup">
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>
        	Furk.net account and media access.
        </summary>
        <description>
            Furk.net account and media access.
        </description>
        <platform>all</platform>
        <minversion>29000</minversion>
        <disclaimer>
            You must have an account at www.furk.net for this addon to function fully.
        </disclaimer>
    </extension>
</addon>
<addon id="script.furkit.artwork" version="1.0.5" name="Furk It Artwork" provider-name="tikipeter">
	<requires>
		<import addon="xbmc.python" version="2.19.0"/>
	</requires>
	<extension point="xbmc.python.module" library="lib" />
	<extension point="xbmc.addon.metadata">
		<summary>Themes for the Furk It Addon</summary>
		<description></description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
